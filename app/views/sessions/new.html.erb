<h1>Log In</h1>

<%= form_tag session_path do -%>
<div class="field">
  <%= label_tag 'login','Login' ,{:class => "required"}  %><br />
  <%= text_field_tag 'login', @login, :class => "required" %>
</div>

<div class="field">
  <%= label_tag 'password', 'Sandi', :class => "required"  %><br/>
  <%= password_field_tag 'password', nil, :class => "required"  %>
</div>

<!-- Uncomment this if you want this functionality
<p><%= label_tag 'remember_me', 'Remember me' %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>
-->
<div class="">
  <%= submit_tag 'Log in', :class => "button" %>
</div>

<% end -%>
