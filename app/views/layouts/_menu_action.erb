          <% if @show_bt_print == false %>
          <% elsif @show_bt_print %>
            <% if @link_to_print.nil? || @link_to_print == "" %>
              <div style="cursor: pointer" class="noprint" class="button_action">
                <span id="bt_print" onclick= "javascript:print()" title="Print">
                  <img src="/images/printer.png" border="0" title="Cetak"/></span>
              </div>
            <%else%>
              <div style="" class="noprint button_action" >
                <a id="bt_print" href="<%= @link_to_print %>" onclick="return popup( this, 'Print', '<%= @popup_width.nil? == true ? 550 : @popup_width %>', '<%= @popup_height.nil? == true ? 300 : @popup_height %>' )" title="Print">
                  <img src="/images/printer.png" border="0" title="Cetak"/></a>
              </div>
            <%end%>
          <%end%>

            <% if @show_bt_back == false %>
            <% elsif @show_bt_back || controller.action_name == "show" || controller.action_name == "edit" || controller.action_name == "update" || controller.action_name == "searching" %>

              <div style="" class="button_action">
                <%
                  if controller.action_name == "new"
                    @back_message = "Apakah anda yakin meninggalkan halaman ini?"
                  end


                  if controller.action_name == "edit" && controller.controller_name != "verifikasis"
                      session[:url_back] = "/#{controller.controller_name}/index/new"
                  end


                if session[:url_back].nil?
                  if controller.action_name == "show" #|| controller.action_name == "edit"
                      session[:url_back] = "/#{controller.controller_name}"
                  end
                end

                %>
                    <% if @back_message.nil? || @back_message == "" %>
                      <a href="<%= session[:url_back].nil? == true ? url_for(:back) : session[:url_back] %>">
                        <img src="/images/back.png" border="0" title="<%= @title_back rescue "Kembali" %>"/>
                      </a>
                    <%else%>
                      <a href="<%= session[:url_back].nil? == true ? url_for(:back) : session[:url_back] %>"
                         onclick="var r = confirm('<%= @back_message %>');
                              if (r == false){
                                return false;
                              }else{return true;}">
                        <img src="/images/back.png" border="0" title="<%= @title_back rescue "Kembali" %>"/>
                      </a>
                    <%end%>
                </div>
            <%end%>
          
            
            <div style="clear: both"></div>
