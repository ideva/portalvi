              <div style=" float: left; margin-right: 10px">
                <%if (@member.image_ktp? rescue false)%>
                  <a href="<%= @member.image_ktp_url() %>" title="Kartu ID" onclick="return popup(this, 'Kartu_ID', 1000, 500)"><img src="/images/card_front.png" border="0"/></a>
