            <% if @show_bt_cancel == false %>
            <% elsif @show_bt_cancel || (controller.action_name == "new" || controller.action_name == "edit" || controller.action_name == "searching_form" || controller.action_name == "create" || controller.action_name == "update" || controller.action_name == "destroy") %>
