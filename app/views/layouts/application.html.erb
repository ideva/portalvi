<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/head' %>
    <%=  javascript_include_tag '/ckeditor/ckeditor' %>
    <% if logged_in? %>
      <%= stylesheet_link_tag 'application' %>
    <%else%>
      <%= stylesheet_link_tag 'sessions' %>
    <%end%>
  </head>


<body  >
 <div id="popup_indicator_wraper" style="display:none;"></div>
  <%= render :partial => "general/popup_box" %>
  <%= image_tag "popup_indicator.gif", :style =>"display:none;", :id =>"popup_indicator" %>

    <div id="header">
      <div id="header_content">
        <div id="header_titel_pic"></div>
        <div id="header_title">Portal Verifikasi EJKBM</div>
        <div style="clear:both"></div>
        <div id="header_menu">
          <%= render :partial => "layouts/menu" %>
        </div>

        <div id="header_category"></div>
      </div>

    </div>


  <div id="wrapper">
    <div  id="loading_body" style="position: fixed; top: 0; margin: 0 auto; width: 1000px; text-align: center; z-index: 2000; display: none" >
      <span class ="loading_body"><%= image_tag "loading_dot.gif" %> Loading...</span>
    </div>
    <% if logged_in? %>
      <div id="menu_action">
          <%= render :partial => "layouts/menu_action" %>
      </div>
    <%end%>



    <div id="container">

      
      <div id="content">
        <div id="ajax_target">
          <% if flash[:extra_notice] || params[:extra_notice] %>
            <p style="" id="extra_notice" ><%= raw (flash[:extra_notice].nil? == true ? params[:extra_notice] : flash[:extra_notice]) %></p>
          <%end%>
            <% if notice || params[:notice] %>
            <p style="" id="notice" ><%= raw (notice.nil? == true ? params[:notice] : notice) %></p>
          <%end%>
          <%if alert || params[:alert] %>
            <p id="error"><%= raw (alert.nil? == true ? params[:alert] : alert) %></p>
          <%end%>
          <%if flash[:error] || params[:error] %>
            <p id="error"><%= raw (flash[:error].nil? == true ? params[:error] : flash[:error]) %></p>
          <%end%>

          <%= yield %>
      </div>
      </div>
      
      <script type="text/javascript">

      </script>
    </div>
    
  </div>
 <div id="footer">
   <div style="float: left">
     <% if logged_in? %>
    <%= current_user.name %>
     <%end%>
   </div>
   <div style="float: right; margin-right: 20px">
    Supported by <a href="http://www.z4comp.com">Z4Comp</a>
   </div>
   <div style="clear: both">

   </div>
   
 </div>
 
   <%= render :partial => "layouts/js_function_on_footer" %>

</body>
</html>