<h1>Listing blogs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Published</th>
    <th>Page</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.is_publish %></td>
    <td><%= blog.page.name rescue '' %></td>
    <td><%= blog.user.name rescue '' %></td>
    <td><%= link_to 'Show', blog, :popup => ['new_window_name', 'height=300,width=600'] %></td>
    <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
    <td><%= link_to 'Destroy', blog, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

 <%= will_paginate @blogs%>

